<body ng-app="loginApp" ng-controller="loginCtrl" ng-cloak>
    @Html.AntiForgeryToken()

    <header style="padding: 22px 0;">
        <div class="container">
            <div class="four columns logo"> <a href="#"><img src="~/Images/rg/logo.png" /></a></div>
            <nav id="navigation" class="twelve columns">
                <form novalidate name="userLoginValidations">
                    <div class="mem_log" style">
                        <div style="width:100%;">
                            <div class="dvUsername">
                                <input type="email" class="txtUserName" name="EmailAddress" id="txtLoigEmailId" ng-model="loginDetails.EmailAddress" style="display:inline;margin-bottom:10px;float:left;" placeholder="Username" ng-required="true" />
                                <span ng-show="userLoginValidations.EmailAddress.$error.required && showLoginError" class="text-danger">Required</span>
                                <span class="text-danger" ng-show="userLoginValidations.EmailAddress.$error.email">{{'notValidEmail' | translate}}!</span>
                            </div>
                            <div class="dvPassword">
                                <input type="password" class="txtPassword" name="uPassword" id="txtPassword" ng-model="loginDetails.uPassword" style="display:inline;  margin-bottom:10px;float:left;" placeholder="Password" ng-required="true" />
                                <span ng-show="userLoginValidations.uPassword.$invalid && showLoginError" class="text-danger">Required</span>
                            </div>
                            <div class="dvButton">
                                <button class="submit btnSubmit" id="btnSubmit" style="display:inline; margin-bottom:10px;" ng-click="userLoginClick(userLoginValidations.$valid)">Submit Now</button>
                            </div>
                            <span class="error text-danger" ng-show="isShowLoginFailErrmsg" style="display: inline-block;width: 62%;float:left;">Wrong username/password. Try again.</span>
                        </div>
                        <div style="width:100%;">
                            <div class="dvButton">
                                <p class="btnSubmit" style="padding:0px; margin:0px;"><a id="aFp" href="/login/ForgotPsw" ng-click="forgotPassword()">Forgot Password</a></p>
                            </div>
                        </div>

                        <table>
                            <tr>
                                <td>
                                    <span id="spnErrorMessage" style="display:none;font-size:13px;">
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </form>

            </nav>
        </div>
    </header>
    <section id="intro">
        <div class="container">
            <div class="eight columns main-text">
                <div style="min-height:100px;background:#2279C6;margin:0px; display:none;" id="dvRewardMsg">
                    <h4 style="color:#80C035; text-align:center;text-transform:none;">Success!</h4>
                    <p class="lead" style="text-align:center; margin:0px;">You have completed the survey and earned $5.00 (500 points)!</p>
                    <p class="lead" style="text-align:center;margin:0px;">
                        Compelete the form below to Redeem your reward<br />
                        Thank you for participating
                    </p>

                </div>
                <div id="dvEarnMsg">
                    <h1>
                        Make <span>$100s / month</span><br />
                        answering questions!
                    </h1>
                    <p class="lead" style="margin:0px;">Earn Rewards for participating in short surveys.</p>
                </div>
                <div class="dvrewardoptions">
                    <p class="lead">Reward Redemption Options:</p>
                    <div class="cpimg" style="width:220px; display:inline; float:left;"> <img src="~/Images/rg/amazon.png" /> <img src="~/Images/rg/apple.png" /> <img src="~/Images/rg/best.png" /> </div>
                    <div class="cpimg" style="width:220px; display:inline; float:left;"> <img src="~/Images/rg/paypal.png" /> <img src="~/Images/rg/facebook.png" /> <img src="~/Images/rg/more.png" /> </div>
                    <img src="~/Images/rg/pics.png" style="width:426px; margin:20px 10px 20px 6px">
                    <h2 style="color:#0e74bc;">Benefits of joining</h2>
                    <ul class="list-services">
                        <li><i class="icon-check" style="color:#8dc73f;"></i>Take surveys from the comfort of your home!</li>
                        <li><i class="icon-check" style="color:#8dc73f;"></i>Surveys are delivered to you conveniently by email!</li>
                        <li><i class="icon-check" style="color:#8dc73f;"></i>Influence the development of products and services you use every day!</li>
                        <li><i class="icon-check" style="color:#8dc73f;"></i>Take surveys from your home computer or mobile device while you're on the go!</li>
                    </ul>
                </div>
            </div>
            <div class="eight columns order-form">
                <div id="dvMemberDetails" class="divForm">
                    <form novalidate name="userInput">
