                                                    <span ng-show="userInput.emailAddress.$error.required && isRegErrMsg" class="text-danger">{{'required' | translate}}</span>
                                                    <span ng-show="emailXVerify==1 ||emailXVerify==0 " ng-class="{'text-danger':emailXVerify==0,'text-success':emailXVerify==1}">{{xVerifyMessage}}</span>
                                                </div>
                                                <div class="col-sm-7" style="margin-bottom:20px;">
                                                    <input type="text" id="txtAddress1" class="form-control" name="address1" ng-model="user.Address1"
                                                           placeholder="Address1" ng-required="true" />
                                                    <span class="error text-danger" ng-show="userInput.address1.$invalid && isRegErrMsg">{{'required'|translate}}</span>
                                                </div>
                                                <div class="col-sm-7" style="margin-bottom:20px;">
                                                    <input type="text" id="txtAddress2" class="form-control" data-bind="value: Address2"
                                                           placeholder="Address2" />
                                                </div>
                                                <div class="col-sm-7" style="margin-bottom:20px;">
                                                    <select class="form-control txt-box" id="CountryId" ng-model="user.CountryId" name="country" ng-change="countryByStates(user.CountryId)" ng-options="con.CountryId as con.CountryName for con in countries" ng-required="true">
