                                                        <option value="">{{'State'|translate}}</option>
                                                    </select>
                                                    <span class="error text-danger" ng-show="userInput.state.$invalid && isRegErrMsg">{{'required'|translate}}</span>
                                                    <span class="error text-danger" ng-show="user.StateId ==0 && isRegErrMsg">{{'required'|translate}}</span>
                                                </div>
                                                <div class="col-sm-7" style="margin-bottom:20px;">
