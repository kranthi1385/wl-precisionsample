@{
    Layout = null;
}
@{
    AjaxOptions ContactOptions = new AjaxOptions()
    {
        OnBegin = "OnregFFormBegin()",
        OnSuccess = "OnregFFormSuccess()",
        OnFailure = "OnregFFormFailure()"
    };
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/Content/Grid.css" rel="stylesheet" />
    <link id="lnkCss" href="~/Content/bootstrap3.0.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/loading-bar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/reddem.css" rel="stylesheet" />
    <link href="~/Content/pagging.css" rel="stylesheet" />
    <script src="~/Scripts/iframresizer.js" type="text/javascript"></script>
    <style type="text/css">
        .test {
            background-color: #408c99;
            -moz-border-radius: 18px;
            -webkit-border-radius: 18px;
            border-radius: 8px;
            display: inline-block;
            color: #ffffff;
            font-family: arial;
            font-size: 13px;
            padding: 7px 2px 4px 15px;
            text-decoration: none;
            height: 23px;
            width: 53px;
            font-size: 15px;
            font-weight: bold;
        }

        #border1 {
            border: solid 1px #CACACA;
            overflow: hidden;
            max-width: 650px;
            min-height: 100%;
            position: relative;
            font-family: Consolas, 'Lucida Console', monospace;
            font-size: medium;
            padding: 10px;
            min-height: 135px;
        }

        body {
            font-family: "Calibri", "sans-serif";
        }
    </style>
</head>
<body ng-cloak ng-app="rcApp">
    <center>
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()

        }
        <div id="border1" style="margin-top:10px" ng-controller="rcController">
            <div style="max-width: 95%;   background-color: White;">
                <div id="dvContent">
                    <div ng-if="paypalReward">
                        <label id="lblMsg" style="color: #6195b2; font-size: 15px; text-align: justify;
                            float: left;">
                            For PayPal payments, we process payments on the 1st and 16th of each month except
                            for weekends and holidays when payments are processed on the first business day
                            immediately following. If you redeem for PayPal on the 1st - 15th of the month (eastern
                            standard time), you will receive your payment on the 16th. If you redeem on the
                            16th - 31st of the month (eastern standard time) you will receive your payment on
                            the 1st. Magazine Subscriptions and Facebook Credits are delivered immediately via
                            email.
                        </label>
                    </div>
                    <div id="border" ng-if="!paypalReward">
                        <div style="width: 100%; padding-bottom: 45px; text-align: justify;">
                            <span id="spnConfMsg" style="color: Green; ">
                                You have successfully redeemed
                                your reward. Your redemption will be verified and approved in 2 to 3 mins.
                            </span>
                            <span id="spnEmailMessage" style="color: Green; ">
                                Conformation Email send
                                to the your Email Address.
                            </span>
                        </div>
                        <!-- <table id="tblDetails" align="center" style="display: none; width: 100%; font-size: 17px;
                            padding-bottom: 20px;">
                            <tbody data-bind="template: {name:'CodeNames', foreach:ViewModel.CouponCodes}">
                            </tbody>
                        </table>-->
                        <div id="dvButton">
                            <input type="button" id="btnBack" class="myButton" value="Back" ng-click="backClick()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </center>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularval")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript" src="~/Scripts/pages/partner/rc.js">
    </script>
</body>
</html>
