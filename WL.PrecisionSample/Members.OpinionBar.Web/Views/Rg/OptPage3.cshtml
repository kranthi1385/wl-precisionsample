@{
    Layout = "~/Views/Shared/_RegLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OptPage3</title>
    @Styles.Render("~/Content/css")
    <link type="text/css" rel="stylesheet" href="/Showmefiles/styles_700.css">
</head>
<body>
    <center>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
        }
        <div ng-controller="page3Controller">
            <div style="padding-left:50px;">
                <center>
                    <iframe id="iff-parentiframe" src="@ViewBag.iframe" style="width:800px;height:auto; min-height:1250px;" frameborder="0"></iframe>
                </center>
            </div>
            <div style="padding-right: 45px; padding-bottom:15px; float:right; display:inline-block;">
                <input type="button" class="btn btn-primary" ng-click="submit()" value="No Thanks Continue" />
            </div>
        </div>
    </center>
    @*Scripts To load the Page 3 offers.*@
    <script src="https://cdn.ifficient.com/cdn/js/iffparent.js" type="text/javascript"></script>
    <script src="https://api.trustedform.com/parent.js" type="text/javascript"></script>
</body>
</html>
