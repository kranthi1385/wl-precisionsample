                            <span ng-if="nameMsg" style="color:red;">{{'onlyletters'|translate}}</span>
                            <span style="color:red;" ng-show="contactForm.Name.$invalid && isShowError">{{'Required'|translate}}</span>
                            <input class="input_contact" name="emailAddress" ng-model="emailDetails.fromaddress" placeholder="E-mail" type="email" ng-required="true">
                            <span class="invalid-feedback" ng-show="userInfoForm.emailAddress.$error.email">{{'notvalidemail' | translate}}!</span>
                            <span style="color:red;" ng-show="contactForm.emailAddress.$invalid && isShowError">{{'Required'|translate}}</span>
                        </div>
