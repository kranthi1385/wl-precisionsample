                        <div class="column_full column_contact">
                            <textarea name="message" ng-model="emailDetails.comments" placeholder="{{'message'|translate}}" rows="5" ng-required="true"></textarea>
                            <span style="color:red;" ng-show="contactForm.message.$invalid && isShowError">{{'Required'|translate}}</span>
                            <div><span ng-if="showMsg" style="color:green;">Thank you! Your request has been submitted and we will reply shortly.</span></div>
                        </div>
                    </div>
                    <div class="row">
