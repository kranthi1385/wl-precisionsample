@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-if="pgLoad">
    <div ng-controller="contactUsController">
        <div class="wrapper_content">
            <form name="contactForm" novalidate>
                <div class="column_wrapper" style="overflow: hidden;">
                    <h2>{{'contactUs'|translate}}
                        <a href="#" style="font-size:14px;color:#454545;float:right;margin:15px 75px 0 0;" ng-click="helpDesk()">{{'faq'|translate}}</a>
                    </h2>
                    <div class="floatright">
                        <div class="icon_howitworks_contact icon_howitworks_signup">
                            <img src="/images/icon_contact.png" width="25">
                        </div>
                    </div>
