                            <h3 style="margin-top:20px;">
                                <a href="/ms/Surveys" class="new-survey-btn"><span class="spnBtn">{{'viewNewSurveys' | translate}}</span></a>
                            </h3>
                        </div>
                        <div id="takesurveys_col" ng-if="user.OrgId!=38">
                            <h2>
                                <div>
                                    <span class="take-survey">{{'takeSurveys'| translate}}</span>
                                </div>
                                <img class="take-survey-img" src="/images/main/takesurveys1.jpg" alt="">
                            </h2>
                            <p id="expand">{{'youHave' | translate}} {{totalRewCount}}  {{'awatingSurveys' | translate}}</p>
                            <p id="p1">{{'rewardText' | translate}} $ {{avaliableReward| number:2}}</p>
                            <br>
                            <h3 style="margin-top:20px;">
                                <a href="/ms/Surveys" class="new-survey-btn"><span class="spnBtn">{{'viewNewSurveys' | translate}}</span></a>
