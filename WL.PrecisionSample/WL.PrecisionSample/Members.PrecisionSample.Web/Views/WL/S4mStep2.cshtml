                                <td style="text-align: center; vertical-align: top;">
                                    <img src="~/Images/S4mLanding/submit1.png" id="imgNext" style="margin-top:30px;cursor:pointer;" ng-click="submit(userInput.$valid)" />
                                </td>
                            </tr>
