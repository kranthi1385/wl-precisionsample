            <!-- ko if: QuestionTypeId == 13 -->
            <div>
                <div class="Table optiontext" data-bind="template: {name:'matrixwithChkboxRadio'}" style="width: 100%">
                </div>

            </div>
            <!-- /ko -->
            <!-- ko if: QuestionTypeId == 14 -->
            <div class="optiontext" style="clear: both; overflow: hidden">
                <div class="wrapper">
                    <div>
                        <div data-bind="foreach: OptionList">
                            <div style="min-height: 21px; padding-bottom: 10px;">
                                <div class="grid_column" data-bind="attr: {id:QuestionId+'_'+OptionId+'_dvmain'}">
                                    <div class="grid_radio" data-bind="attr: {id:$parent.QuestionId+'_'+OptionId+'_radio'},event: {click:rdClick.bind($root,$parent)}" style="margin-bottom: 14px;">
                                    </div>
                                    <div class="grid_span_holder">
                                        <span class="grid_span" data-bind="text:OptionText,attr: {id:QuestionId+'_'+OptionId+'_rdDiv'},event: {click:rdClick.bind($root,$parent)}"></span>
                                    </div>
                                    <input type="radio" style="display: none;" data-bind="attr: {id:OptionId +'_radio',value:OptionId, name: QuestionId+'_rd'}, checked:$parent.OptionId" />
                                </div>
                                <div>
                                    <span class="single_radio" data-bind="text:OptionText , attr: {id:OptionId+'_optn','for':OptionId +'_radio'}"></span>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <span style="color: Red; display: none; margin-left: 10px; width: 100%; text-align: left; float: left; padding-bottom: 10px; float: left; font-size: 13px;" data-bind="validator: QuestionId+'_rd',attr:{ id: QuestionId+'_spn'}" />
            </div>
            <!-- /ko -->
            <!-- ko if: QuestionTypeId == 2 -->
            <!-- ko if:AutoPostBack == 1 -->
            <div>
                <div align="left" style="padding-top: 9px; padding-bottom: 10px;">
                    <select class="selectdropdown" id="ddlQuestion" data-bind="options: OptionList, optionsText: 'OptionText',optionsValue: 'OptionId',value:OptionId, optionsCaption: '-- Select --',attr: {id:QuestionId },event: { change:selectionChanged }"></select>
                </div>
                <span align="left" style="color: red; display: none; float: left; width: 100%; padding-bottom: 10px; text-align: left;" data-bind="validator:$parent.OptionId, attr:{ id: QuestionId+'_spn'}">Please answer the question.</span>
            </div>
            <!-- /ko -->
            <!-- ko if:AutoPostBack == 0 -->
            <div>
                <div align="left" style="padding-top: 9px; padding-bottom: 10px;">
                    <select class="selectdropdown" id="Select1" data-bind="options: OptionList, optionsText: 'OptionText',optionsValue: 'OptionId',value:OptionId, optionsCaption: '-- Select --',attr: {id:QuestionId },event: { change:selectionChanged }"></select>
                </div>
                <span align="left" style="color: red; display: none; float: left; width: 100%; padding-bottom: 10px; text-align: left;" data-bind="validator:$parent.OptionId, attr:{ id: QuestionId+'_spn'}">Please answer the question.</span>
            </div>
            <!-- /ko -->
            <!-- /ko -->
            <!-- ko if: OptionDisplay == 'V' -->
            <div data-bind="template: {name:'SurveyQuestionList', foreach: SelectedChildQuestionList}, attr: {id:QuestionId+'_trChildQuestionId'}" style="width: 100%;display:inline-block">
            </div>
            <!-- /ko -->
            <!-- ko if: OptionDisplay == 'H' -->
            <div data-bind="template: {name:'SurveyQuestionListhorizental'}, attr: {id:QuestionId+'_trChildQuestionId'}">
            </div>
            <!-- /ko -->
            <div data-bind="foreach: ChildQuestionList">
                <!-- ko 'if': QuestionTypeId == 5 -->
                <div class="Table optiontext" data-bind="template: {name:'matrixTemp'}" style="width: 100%">
                </div>
                <div width="100%">
                    <span align="left" style="color: Red; display: none; float: left; width: 100%; font-size: 13px; text-align: left;" data-bind="validator: QuestionId+'_checkbox',attr:{ id: QuestionId+'_spn'}" />
                </div>
                <!-- /ko -->
            </div>
        </div>
    </script>

