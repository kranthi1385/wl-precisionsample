    </script>

    <script type="text/x-jquery-tmpl" id="matrixwithChkboxRadio">

        <div class="grid_floating_header" width="100%">
            <div class="question_martix" style="min-height: 30px;">
                <div style="width: 38%;" class="grid_question">
                </div>
                <div data-bind="foreach:ChildQuestionList" style="font-size: 14px;">

                    <div style="width: 16%;" class="grid_column" data-bind="text: QuestionText"></div>

                </div>
            </div>
        </div>

        <div class="question_martix">
            <div data-bind="foreach:ChildQuestionList">

                <!-- ko 'if': $index() == 0-->
                <div data-bind="foreach:OptionList" style="width: 100%;">
