        function getUrlVars() {
            var vars = {};
            var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (m, key, value) {
                vars[key] = value;
            });
            return vars;
        }
        var ug = getUrlVars()["ug"]; //user Guid
        if (ug == undefined) {
            ug = '';
        }
        var is_sim = getUrlVars()["is_sim"]; // this is not needed now.
        if (is_sim == undefined) {
            is_sim = 'f';
        }
        var extid = getUrlVars()["extid"]; //external Member ID
        if (extid == undefined) {
            extid = '';
        }

        var is_t = getUrlVars()["is_t"]; // to show profiles after registrioan.
        if (is_t == undefined) {
            is_t = 's';
        }

        var pg = getUrlVars()["pg"] //user status guid added 06/13/2016
        debugger;
        if (pg == undefined) {
            pg = '';
        }
        if (pg.toLowerCase() == '9EE17B1A-6882-4CAE-9AED-3C4D4A92DFA9'.toLowerCase()) {
            $(document).ready(function () {
                $("div#conversentform").hide();
                $("div#conversentbutton").hide();
                $("div#conversantimg").hide();
            });
        }
        else if (pg.toLowerCase() == '71CC02CD-B8A5-4A5A-AF4D-9988B2F21761'.toLowerCase()) {
            $(document).ready(function () {
                $("div#obform").hide();
                $("div#obformbutton").hide();
                $("div#obimg").hide();
            });
        }

        var pc = getUrlVars()["pc"];//Project cost .
        if (pc == undefined) {
            pc = '';
        }
        else {
            pc = pc.replace(ug, "");
        }


        function takeme() {
            window.location.href = 'https://www.conversant.pro/registration?leadid=' + ug + '&pc=t450&extid=' + extid;
        }

