    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
    <script src="~/Scripts/angular-cookies.min.js"></script>
    <script src="~/Scripts/angular-translate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-translate-loader-partial.js" type="text/javascript"></script>
    <script src="~/Scripts/translate-pluggable-loader.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/services/customServices.js"></script>
    <script src="https://www.offerfwd.net/oi/joi.js"></script>
    @Styles.Render("~/Content/css")
    <link type="text/css" href="~/Content/selectboxit.css" rel="stylesheet" />
</head>
<body ng-app="loginApp" ng-cloak>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N9DDS62"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="navigation_mobile">
        @*@if (@ViewBag.SelectedMenu == "about" || @ViewBag.SelectedMenu == "contact")
            {
                <div class="nav_item_mob  my_profile">
                    @Opinionbar.Language.Resource.menu_profile
                </div>
                <div class="hr_mob_nav"></div>
            }*@
        <div class="nav_item_mob home" ng-click="aboutClick()">
            {{'about'|translate}}
        </div>
        <div class="hr_mob_nav"></div>
        <div class="nav_item_mob home" ng-click="contactClick()">{{'contactUs'|translate}}</div>
        <div class="hr_mob_nav"></div>
        @*<div class="nav_item_mob flag_mob"><a href='/common/language'><img ng-src="{{flagimg}}" width="25" /></a></div>*@
        <div class="nav_item_login home_login"
             ng-mouseenter="showDropdown = true"
             ng-mouseleave="showDropdown = false">
            <span class="language-selector">
                {{'Language'|translate}}
            </span>
            <div class="list_language" ng-show="showDropdown">
                <ul>
                    <li ng-repeat="lang in EUCountryCode | orderBy :'LangName'"
                        ng-click="selectLanaguage($index, lang)">
                        <b rel="nofollow">
                            {{lang.LangName}}
                        </b>
                    </li>
                </ul>
            </div>
        </div>
        <div class="hr_mob_nav"></div>
    </div>

    <div class="header">
        <div class="header_content">
            <div href="#" class="logo"></div>
            <div class="nav_wrapper">
                @if (@ViewBag.SelectedMenu == "about" || @ViewBag.SelectedMenu == "contact")
                {
                    <div class="nav_item navigation_inactive my_profile">
                        @Opinionbar.Language.Resource.menu_profile
                    </div>
                }
                <div class="nav_item home @((@ViewBag.SelectedMenu == "about" || @ViewBag.SelectedMenu != "contact") ? "navigation_active" : "navigation_inactive")">
                    {{'about'|translate}}
                </div>
                @if (@ViewBag.SelectedMenu == "about" || @ViewBag.SelectedMenu == "contact")
                {
                    <div class="nav_item contact_login @(@ViewBag.SelectedMenu == "contact" ? "navigation_active" : "navigation_inactive")">
                        @Opinionbar.Language.Resource.menu_contact
                    </div>
                }
                <div class="nav_item_login home_login"
                     ng-mouseenter="showDropdown = true"
                     ng-mouseleave="showDropdown = false">
                    <span class="language-selector">
                        {{'Language'|translate}} 
                    </span>
                    <div class="list_language" ng-show="showDropdown">
                        <ul>
                            <li ng-repeat="lang in EUCountryCode | orderBy :'LangName'"
                                ng-click="selectLanaguage($index, lang)">
                                <b>
                                    {{lang.LangName}}
                                </b>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="hamburger_icon"></div>
            </div>
        </div>
    </div>
    <div class="countries_wrapper">
        <div class="header_content" style="padding: 0px;">
            <div class="countries">
                <div class="country"><img src="/images/flag1.png" width="25"><div class="country_name">Nederlands</div></div>
                <div class="country">
                    <img src="/images/flag2.png" width="25"><div class="country_name">
                        Danske
                    </div>
                </div>
                <div class="country"><img src="/images/flag3.png" width="25"><div class="country_name">日本人</div></div>
                <div class="country"><img src="/images/flag4.png" width="25"><div class="country_name">Deutsch</div></div>
                <div class="country"><img src="/images/flag5.png" width="25"><div class="country_name">中國</div></div>
                <div class="country"><img src="/images/flag6.png" width="25"><div class="country_name">Português</div></div>

            </div>
        </div>
    </div>
    <div class="banner">
        <div class="banner_content">
            <div class="slogan">
                <div class="h1">
                    {{'giveyouropinion' | translate}}
                </div>
                <div class="h3 font_normal">
                    {{'nospam' | translate}}
                </div>
            </div>
            @if (@ViewBag.IsShowLogIn == 1)
            {
                <div class="btn_wrapper_banner">
                    <div class="centerwrapper">
                        <div class="btn_banner font_bold sign_up_email" ng-click="userIPCheck()">
                            <div class="sign_up_email_icon"></div>
                            {{'createaccount' | translate}}
                        </div>
                        <div class="btn_banner font_bold sign_in">
                            <div class="sign_in_icon"></div>
                            {{'signacc' | translate}}

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @RenderBody()
    <div class="footer">
        <span style="margin-right:30px;">© {{'copyRights'|translate}} <a href="https://www.precisionsample.com" style="cursor:pointer;color: #888;" target="_blank" class="precisionsample">PrecisionSample<br></a></span>
        <div class="nav_footer_wrapper">
            <div class="nav_footer_item more_about">
                <a class="footer" href="/Footer/MoreAbout">{{'footer_more_abt_opbar'|translate}}</a>
            </div>
            <div class="nav_footer_item terms">
                <a class="footer" href="" ng-click="termsClick()"> {{'terms_conditions'|translate}}</a>
            </div>
            @*<div class="nav_footer_item terms">
                <a class="footer" href="" ng-click="DoNotSellMyInfo()"> {{' Do Not Sell My Info'|translate}}</a>
            </div>*@
            <div class="nav_footer_item privacy">
                <a class="footer" href="" ng-click="privacyClick()">{{'privacy'|translate}}</a>
            </div>
            <div class="nav_footer_item terms">
                    <a class="footer" href="" ng-click="doNotSellMyInfo()"> {{'saveMyInfo'|translate}}</a>
                </div>
        </div>
        <div class="nav_footer_mobile">
            <div class="nav_footer_item more_about">
                <a class="footer" href="" ng-click="aboutClick()">@Opinionbar.Language.Resource.footer_more_abt_opbar</a>
            </div>
            <div class="nav_footer_item terms">
                <a class="footer" href="" ng-click="termsClick()"> @Opinionbar.Language.Resource.footer_terms_conditions</a>
            </div>
            <div class="nav_footer_item privacy">
                <a class="footer" href="" ng-click="privacyClick()">@Opinionbar.Language.Resource.footer_privacy</a>
            </div>
        </div>
    </div>
    <div class="preloader" loader>
        <div class="loader"></div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/pages/selectboxit.js")
    @Scripts.Render("~/Scripts/pages/functions.js")
    @Scripts.Render("~/Scripts/pages/links.js")
</body>
</html>